{
  "name": "dbms-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "A modern database management system built with Next.js, PostgreSQL, and Electron",
  "author": "DBMS Desktop",
  "main": "electron/main.js",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "dev": "concurrently \"npm run next:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "electron:build": "tsc electron/main.ts electron/preload.ts --outDir electron --esModuleInterop --skipLibCheck",
    "dist": "npm run build && npm run electron:build && electron-builder",
    "lint": "next lint"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "pg": "^8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.1",
    "dotenv": "^17.2.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.dbms.desktop",
    "productName": "DBMS Desktop",
    "files": [
      "**/*",
      "electron/main.js",
      "electron/preload.js",
      "!**/*.ts",
      "!*.md"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
